	<!-- edit service -->
	<definition name="editService" extends="base.definition">
		<put-attribute name="title" value="Home"/>
		<put-attribute name="body" value="/WEB-INF/views/service/edit.jsp"/>
	</definition>

	<!-- view booking -->
	<definition name="viewBooking" extends="base.definition">
		<put-attribute name="title" value="Booking"/>
		<put-attribute name="body" value="/WEB-INF/views/booking/viewBooking.jsp"/>
