	<definition name="index" extends="base.definition">
		<put-attribute name="title" value="Home" />
		<put-attribute name="body" value="/WEB-INF/views/index.jsp" />
	</definition>
	
	<!-- show room -->
	<definition name="rooms" extends="base.definition">
		<put-attribute name="title" value="Home" />
		<put-attribute name="body" value="/WEB-INF/views/room/rooms.jsp"/>
	</definition>

	<!-- add room -->
	<definition name="newRoom" extends="base.definition">
		<put-attribute name="title" value="Home" />
		<put-attribute name="body" value="/WEB-INF/views/room/new.jsp"/>
	</definition>

	<!-- edit room -->
	<definition name="editRoom" extends="base.definition">
		<put-attribute name="title" value="Home" />
		<put-attribute name="body" value="/WEB-INF/views/room/edit.jsp"/>
	</definition>

	<!-- show service -->
	<definition name="services" extends="base.definition">
		<put-attribute name="title" value="Home"/>
		<put-attribute name="body" value="/WEB-INF/views/service/services.jsp"/>
	</definition>

	<!-- add service -->
	<definition name="newService" extends="base.definition">
		<put-attribute name="title"	value="Home"/>
		<put-attribute name="body" value="/WEB-INF/views/service/new.jsp"/>
